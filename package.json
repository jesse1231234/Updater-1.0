{
  "name": "canvas-rewrite-monorepo",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "workspaces": ["apps/*", "packages/*"],
  "scripts": {
    "postinstall": "pnpm -C apps/api prisma generate",
    "prebuild": "pnpm -C apps/api prisma generate",
    "build": "pnpm -r --filter ./apps/** build",

    "dev": "concurrently -k -n api,web -c blue,green \"pnpm -C apps/api dev\" \"pnpm -C apps/web dev\"",

    "prestart": "pnpm prisma:deploy",
    "start": "concurrently -k -n api,web -c blue,green \"pnpm -C apps/api start\" \"pnpm -C apps/web start\"",

    "prisma:deploy": "pnpm -C apps/api prisma migrate deploy"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
