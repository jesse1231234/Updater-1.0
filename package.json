{
"name": "canvas-rewrite-monorepo",
"private": true,
"packageManager": "pnpm@9.0.0",
"workspaces": ["apps/*", "packages/*"],
"scripts": {
"build": "pnpm -r --filter ./apps/** build",
"dev": "concurrently -k -n api,web -c blue,green \"pnpm --filter @app/api dev\" \"pnpm --filter @app/web dev\"",
"start": "concurrently -k -n api,web -c blue,green \"pnpm --filter @app/api start\" \"pnpm --filter @app/web start\"",
"prisma:deploy": "pnpm --filter @app/api prisma migrate deploy"
},
"devDependencies": {
"concurrently": "^8.2.2"
}
}
