{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "lib": ["ES2021"],
    "outDir": "dist",
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,

    // ðŸ‘‡ Required for Nest legacy decorators
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    // Helps avoid class field semantics surprises with Nest
    "useDefineForClassFields": false,

    "types": ["node"],
    "sourceMap": true
  },
  "include": ["src/**/*"]
}
